{{> navigation}} <!-- Include navigation partial -->

<article>
    <h2>{{post.title}}</h2>
    <p>{{post.content}}</p>
    <footer>
        <p>Posted by: {{post.username}} on {{post.created_at}}</p>
    </footer>
</article>

<h3>Comments</h3>
{{#each comments}}
<div class="comment">
    <p>{{this.comment_text}}</p>
    <footer>
        <p>Commented by: {{this.username}} on {{this.created_at}}</p>
    </footer>
</div>
{{/each}}

<form action="/api/comments" method="POST">
    <textarea name="comment_text" placeholder="Leave a comment"></textarea>
    <input type="hidden" name="post_id" value="{{post.id}}">
    <button type="submit">Post Comment</button>
</form>

{{> footer}} <!-- Include footer partial -->
